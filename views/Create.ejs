<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h1 class="text-white">Make up Form</h1>
      <h6 class="text-white">Please Fill out the form</form></h6>
      <form action= "/drink" method="post" id="drinkForm">
        <fieldset>
          <div class="container mb-3">
            <div class="input-group mb-3">
              <span class="input-group-text">Student Name:</span>
              <input class="form-control" id="flavor" name="flavor" type="text" required />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text">Subject:</span>
              <input class="form-control" id="size" name="size" type="text" required />
              <span class="input-group-text">Assessment name:</span>
              <input class="form-control" id="price" name="price" type="number" required />
              <span class="input-group-text">Quiz or Test:</span>
              <% for ( var i = 0; i < Quiz or Test.length; i++ ) { %>
                      <% var selected = ( ride.bike == bikes[i] ) ? "selected" : ""; %>
                      <option value="<%=bikes[i] %>" <%=selected %>><%=bikes[i] %></option>
              <% } %>
              <span class="input-group-text">Date to make up:</span>
              <input type="date" id="date" name="date" required />
              <span class="input-group-text">Period to Make up:</span>
              <% for ( var i = 0; i < bikes.length; i++ ) { %>
                      <% var selected = ( ride.bike == bikes[i] ) ? "selected" : ""; %>
                      <option value="<%=bikes[i] %>" <%=selected %>><%=bikes[i] %></option>
              <% } %>
            </div>
          </div>
        </fieldset>
        <input type="submit" id="submit" value="Submit" />
      </form>
    </div>
    <div class="col-3"></div>
  </div>
